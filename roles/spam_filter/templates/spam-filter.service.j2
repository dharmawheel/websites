# {{ ansible_managed }}
[Unit]
Description=gRPC Service for Spam Classifier
Documentation=https://github.com/proprietary/forum-spam-filter
Requires=network.target
After=network.target

[Service]
Type=simple
Environment="MODEL_PATH={{ spam_filter_model_path }}"
Environment="GRPC_PORT={{ spam_filter_grpc_port }}"
ExecStart={{ spam_filter_dir }}/target/release/rpc
User={{ spam_filter_user }}
Group={{ spam_filter_group }}
Restart=on-failure
LimitNOFILE=infinity

[Install]
WantedBy=multi-user.target
Alias=spam-filter.service